[user]
    email = yusuke@ebihara.me
    name = Ebihara Yusuke

[alias]
    co = checkout
    m = merge
    l = log
    g = log --graph --date=short --decorate=short --pretty=format:'%C(yellow)%h %C(reset)%cd %C(green)%cn %C(yellow)%d %C(reset)%s'
    cm = commit
    cma = commit --amend
    cman = commit --amend --no-edit
    b = branch
    s = status
    st = status
    f = fetch
    fp = fetch -p
    rs = reset
    ps = push
    pl = pull
    a = add
    d = diff
    ds = diff --staged
    delete-merged = !git branch | grep -vE '^\\*|master$|develop$|main$|staging$' | xargs -I % git branch -d %
[core]
    symlinks = true
    excludesfile = ~/.gitignore_global
[push]
    default = current
[pull]
    rebase = false
[commit]
    gpgsign = false
    gpgsigna = false
	template = /home/ebi/.gittemplate
[init]
	defaultBranch = main
[diff]
  tool = nvimdiff
[difftool "nvimdiff"]
  cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
[mergetool "nvimdiff"]
  cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"  \"$MERGED\""
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
